<?xml version="1.0" encoding="utf-8"?>
<site  site="http://www.sbs.com.au/ondemand/.*"
       plugin="http://resources.sbs.com.au/vod/theplatform/core/.*/swf/flvPlayer.swf"
       initialState="paused"
       version="1.0"
       >
 <crop x="0" y="0" width="600" height="360" />

 <state name="playing">
  <event>
   <condition>
    <command name="pause" />
   </condition>
   <action>
    <click x="50" y="20" />
    <goto state="paused" />
   </action>
  </event>
 </state>

 <state name="paused">
  <event>
   <condition>
    <command name="play" />
   </condition>
   <action>
    <click x="50" y="20" />
    <goto state="playing" />
   </action>
  </event>
 </state>

</site>